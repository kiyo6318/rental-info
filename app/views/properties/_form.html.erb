<%= form_for @property do |f| %>
  <div>
    <%= f.label "物件名" %>
    <br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label "賃料" %>
    <br>
    <%= f.text_field :price %>
  </div>
  <div>
    <%= f.label "住所" %>
    <br>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label "築年数" %>
    <br>
    <%= f.text_field :age %>
  </div>
  <div>
    <%= f.label "備考" %>
    <br>
    <%= f.text_area :remarks %>
  </div>
  <hr>
  <% count = 0 %>
  <%= f.fields_for :stations do |s_f|  %>
    <h3>最寄駅<%= count += 1 %></h3>
    <div>
      <%= s_f.label "路線名" %>
      <br>
      <%= s_f.text_field :line %>
    </div>
    <div>
      <%= s_f.label "駅名" %>
      <br>
      <%= s_f.text_field :station_name %>
    </div>
    <div>
      <%= s_f.label "徒歩分数" %>
      <br>
      <%= s_f.text_field :walktime %>分
    </div>
  <% end %>
  <div>
    <%= f.submit button_name %>
  </div>
<% end %>